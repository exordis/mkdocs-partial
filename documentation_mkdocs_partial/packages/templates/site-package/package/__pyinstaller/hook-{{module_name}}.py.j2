from PyInstaller.utils.hooks import collect_all
from documentation_mkdocs_partial.packages.packager import Packager
from itertools import chain

required_distributions= ["{{package_name}}",{% for requirement in requirements %}"{{ requirement.name }}",{% endfor %}]
required_modules = Packager.get_mudules_from_packages(*required_distributions)

datas=[]
binaries=[]
hiddenimports=[]

for module in required_modules:
    module_datas, module_binaries, module_hiddenimports = collect_all(module)
    datas+=module_datas
    binaries+=module_binaries
    hiddenimports+=module_hiddenimports
